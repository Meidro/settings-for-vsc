{
    // Terminal
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorWidth": 2,
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.enableFileLinks": "off",
    "terminal.integrated.scrollback": 50,
    "terminal.integrated.defaultProfile.windows": "PowerShell",

    // Redactor
    "editor.minimap.enabled": false,
    "editor.find.seedSearchStringFromSelection": "selection",
    "editor.autoClosingComments": "always",
    "editor.autoClosingQuotes": "always",
    "editor.definitionLinkOpensInPeek": true,
    "explorer.autoReveal": false,
    "editor.hover.delay": 1000,
    "editor.stickyScroll.enabled": false,
    "editor.scrollbar.horizontal": "visible",
    "editor.scrollbar.vertical": "visible",
    "editor.scrollbar.scrollByPage": true,
    "editor.selectionHighlight": false,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.includeStrings": false,
    "editor.accessibilitySupport": "off",
    "editor.roundedSelection": false,
    "editor.tabSize": 4,
    "editor.wordWrapColumn": 120,
    "editor.wordWrap": "on",
    "diffEditor.wordWrap": "on",
    "editor.folding": false,
    "editor.insertSpaces": false,
    "editor.smoothScrolling": true,
    "editor.detectIndentation": true,
    "editor.suggestSelection": "first",
    "editor.formatOnPaste": false,
    "editor.unicodeHighlight.nonBasicASCII": false,
    "editor.linkedEditing": true,
    "editor.renderControlCharacters": false,
    "editor.quickSuggestionsDelay": 0,
    "editor.glyphMargin": false,
    "editor.cursorBlinking": "expand",
    "editor.cursorStyle": "line-thin",
    "editor.cursorSmoothCaretAnimation": "explicit",

    // Font
    "editor.fontFamily": "Consolas,'Courier New', monospace",
    "editor.fontSize": 16,
    "editor.fontWeight": "500",
    "editor.lineHeight": 1.5,
    "editor.letterSpacing": 0.5,
    "editor.fontLigatures": true,

    "editor.inlayHints.fontFamily": "PragmataPro",
    "editor.defaultFoldingRangeProvider": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "search.defaultViewMode": "tree",
    "debug.inlineValues": "on",
    "debug.terminal.clearBeforeReusing": true,
    "debug.autoExpandLazyVariables": "on",
    "window.density.editorTabHeight": "compact",
    "window.commandCenter": false,
    "explorer.compactFolders": false,
    "workbench.startupEditor": "none",
    "workbench.productIconTheme": "material-product-icons",
    "workbench.list.openMode": "doubleClick",
    "workbench.editor.enablePreview": false,
    "workbench.activityBar.location": "top",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.editorAssociations": {"*.dat": "default", "*.db": "default"},
    "workbench.layoutControl.enabled": false,
    "workbench.secondarySideBar.defaultVisibility": "hidden",
    "breadcrumbs.showArrays": false,
    "breadcrumbs.enabled": false,
    "prettier.semi": true,
    "prettier.singleQuote": true,
    "prettier.jsxSingleQuote": true,
    "prettier.bracketSpacing": false,
    "prettier.printWidth": 130,
    "prettier.tabWidth": 4,
    "prettier.vueIndentScriptAndStyle": true,

    // Git
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.autoRepositoryDetection": "subFolders",

    // Python
    "python.languageServer": "Pylance",
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.displayEnglishDiagnostics": true,
    "python.analysis.autoSearchPaths": true,
    "python.defaultInterpreterPath": "c:\\Program Files\\Python313\\python.exe",
    "python.createEnvironment.trigger": "off",
    "python.analysis.importFormat": "absolute",
    "python.analysis.completeFunctionParens": false,
    "python.analysis.indexing": true,
    "python.analysis.inlayHints.callArgumentNames": "off",
    "python.analysis.inlayHints.variableTypes": false,
    "python.analysis.inlayHints.functionReturnTypes": false,
    "[python]": {"editor.defaultFormatter": "ms-python.black-formatter"},

    // Additional settings
    "editor.inlineSuggest.showToolbar": "always",
    "terminal.integrated.allowedLinkSchemes": ["file", "http", "https", "mailto", "vscode", "vscode-insiders", "docker-desktop"],
    "files.associations": {"*.json": "jsonc"},

    // Themes
    "workbench.colorTheme": "Monokai",
    "editor.tokenColorCustomizations": {
        "[Monokai]": {
            "textMateRules": [
                {
                    "scope": ["keyword.control", "keyword.operator", "storage.type"],
                    "settings": {"foreground": "#ff79c6", "fontStyle": "italic bold"}
                },
                {
                    "scope": "comment",
                    "settings": {"foreground": "#8b0000", "fontStyle": "italic bold"}
                },
                {
                    "scope": "entity.name.type",
                    "settings": {"foreground": "#8be9fd", "fontStyle": "italic"}
                },
                {
                    "scope": "variable.other.readwrite",
                    "settings": {"foreground": "#e4e4e4", "fontStyle": ""}
                },
                {
                    "scope": ["variable.other", "constant"],
                    "settings": {"foreground": "#bd93f9", "fontStyle": "italic bold"}
                },
                {
                    "scope": "constant.numeric",
                    "settings": {"foreground": "#bd93f9", "fontStyle": ""}
                }
            ],
            "variables": "#e4e4e4",
            "types": "#8be9fd",
            "functions": "#50fa7b",
            "comments": "#8b0000",
            "numbers": "#bd93f9",
            "strings": "#f1fa8c"
        }
    },

    //  [Monokai]
    "workbench.colorCustomizations": {
        "terminal.foreground": "#e5e4e4",
        "terminal.background": "#0e0e0e",
        "terminalCursor.foreground": "#cc0a0a",
        "terminal.ansiBrightGreen": "#15e815",
        "terminal.ansiBrightRed": "#ff4500",
        "terminal.ansiBrightBlue": "#1b71d4",
        "editor.background": "#151515",
        "editor.selectionBackground": "#87777785",
        "editor.lineHighlightBackground": "#343333",
        "editorCursor.foreground": "#ffcc00",
        "sideBar.background": "#080808",
        "sideBar.foreground": "#b7c299",
        "activityBar.background": "#202020",
        "activityBar.foreground": "#cccccc",
        "statusBar.background": "#151515",
        "statusBar.foreground": "#d3d3d3",
        "editorBracketHighlight.foreground1": "#f1fa8c"
    },

    "html.autoClosingTags": true,
    "javascript.autoClosingTags": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.autoClosingTags": true,

    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },

    "liveSassCompile.settings.generateMap": false,
    "liveSassCompile.settings.formats": [{"format": "expanded", "extensionName": ".css", "savePath": "/css"}],
    "liveSassCompile.settings.autoprefix": ["> 1%", "last 5 versions"],
    "scss.lint.emptyRules": "ignore",

    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.donotVerifyTags": true,

    "ecsstractor_port.brackets_newline_after": false,
    "ecsstractor_port.indentation": " ",
    "ecsstractor_port.bem_nesting": true,
    "ecsstractor_port.empty_line_before_nested_selector": false,

    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}
